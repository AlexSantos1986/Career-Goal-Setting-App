<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context="com.alexsantos.careergoalsetting.activity.SettingsActivity">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/circularImageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/avatar_profile"
        android:layout_above="@+id/display_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/setting_status_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_name"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:text="@string/default_status"
        android:textSize="17sp" />

    <Button
        android:id="@+id/setting_status_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_status_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Change Status"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/setting_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/setting_status_button"
        android:layout_alignLeft="@+id/setting_status_button"
        android:layout_alignRight="@+id/setting_status_button"
        android:layout_alignStart="@+id/setting_status_button"
        android:layout_below="@+id/setting_status_button"
        android:layout_marginTop="20dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="CHANGE IMAGE"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>
